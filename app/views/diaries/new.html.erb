<div class="max-w-2xl mx-auto mt-10">
  <h1 class="text-2xl font-bold mb-6 text-center">🌳 新しい日記を投稿する</h1>

  <%= form_with(model: @diary, local: true, class: "space-y-6") do |f| %>
    <div>
      <%= f.label :title, "タイトル", class: "block font-semibold mb-2" %>
      <%= f.text_field :title, class: "w-full border-gray-300 rounded-lg p-2" %>
    </div>

    <div>
      <%= f.label :content, "内容", class: "block font-semibold mb-2" %>
      <%= f.text_area :content, rows: 6, class: "w-full border-gray-300 rounded-lg p-2" %>
    </div>

    <div>
      <%= f.label :visited_at, "訪問日", class: "block font-semibold mb-2" %>
      <%= f.date_field :visited_at, class: "w-full border-gray-300 rounded-lg p-2" %>
    </div>

    <div>
      <%= f.label :playground_id, "遊び場", class: "block font-semibold mb-2" %>
      <%= f.number_field :playground_id, class: "w-full border-gray-300 rounded-lg p-2" %>
    </div>

    <div class="flex justify-center">
      <%= f.submit "投稿する", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded-lg" %>
    </div>
  <% end %>
</div>
