<div class="max-w-2xl mx-auto mt-16 bg-white p-8 rounded-2xl shadow-md">
  <h1 class="text-2xl font-bold mb-8 text-center text-gray-800">🌳 新しい日記を投稿する</h1>

  <%= form_with(model: @diary, local: true, class: "space-y-6") do |f| %>

    <% if @diary.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6">
        <p class="font-bold">⚠️ 入力エラーがあります：</p>
        <ul class="list-disc ml-6 mt-2">
          <% @diary.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :title, "タイトル", class: "block font-semibold mb-2 text-gray-700" %>
      <%= f.text_field :title,
          class: "w-full border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:outline-none rounded-lg p-3 text-gray-800 shadow-sm" %>
    </div>

    <div>
      <%= f.label :content, "内容", class: "block font-semibold mb-2 text-gray-700" %>
      <%= f.text_area :content,
          rows: 6,
          class: "w-full border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:outline-none rounded-lg p-3 text-gray-800 shadow-sm" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :visited_at, "訪問日", class: "block font-semibold mb-2 text-gray-700" %>
        <%= f.date_field :visited_at,
            class: "w-full border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:outline-none rounded-lg p-3 text-gray-800 shadow-sm" %>
      </div>

      <div>
        <%= f.label :playground_id, "遊び場", class: "block font-semibold mb-2 text-gray-700" %>
        <%= f.number_field :playground_id,
            class: "w-full border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:outline-none rounded-lg p-3 text-gray-800 shadow-sm" %>
      </div>
    </div>

    <div class="flex justify-center mt-8">
      <%= f.submit "🌱 投稿する",
          class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-10 rounded-lg shadow-md transition transform hover:-translate-y-0.5" %>
    </div>
  <% end %>
</div>
