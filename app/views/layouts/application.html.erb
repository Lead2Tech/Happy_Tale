    <!-- üì± „Éè„É≥„Éê„Éº„Ç¨„Éº„É°„Éã„É•„ÉºÈñãÈñâ -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const menuBtn = document.getElementById('menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        if (menuBtn && mobileMenu) {
          menuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
          });
        }
      });
    </script>

    <!-- ‚úÖ Google Maps API „ÇíÈùûÂêåÊúüÔºãdefer‰ªò„Åç„Åß„É≠„Éº„Éâ -->
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&callback=initMap&libraries=marker"></script>


    <!-- ‚úÖ TurboÂØæÂøúÔºàGoogle„É≠„Éº„ÉâÈÅÖÂª∂ÊôÇ„ÇÇÂÜçË©¶Ë°åÔºâ -->
    <script>
      document.addEventListener("turbo:load", () => {
        console.log("‚ö° Turbo load detected from layout");
        let retry = 0;

        const initWhenReady = () => {
          if (typeof google !== "undefined" && typeof initMap === "function") {
            console.log("üó∫Ô∏è Google Maps ready ‚Üí initMap ÂÆüË°å");
            initMap();
          } else if (retry < 8) {
            retry++;
            console.warn(`‚è≥ Google Maps„É≠„Éº„ÉâÂæÖÊ©ü‰∏≠... (${retry})`);
            setTimeout(initWhenReady, 700);
          } else {
            console.error("‚ùå Google Maps „ÅÆÂàùÊúüÂåñ„Å´Â§±Êïó„Åó„Åæ„Åó„Åü");
          }
        };

        // ÂàùÊúüÂëº„Å≥Âá∫„Åó
        setTimeout(initWhenReady, 300);
      });
    </script>

    <%= javascript_import_module_tag "map" %> <!-- ‚úÖ map.js „ÇíË™≠„ÅøËæº„ÇÄ -->
  </body>
</html>
