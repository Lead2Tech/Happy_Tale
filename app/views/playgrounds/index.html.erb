<div class="max-w-4xl mx-auto mt-12 px-6">
  <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">🏞 遊び場を検索</h1>

  <!-- 🔍 検索フォーム -->
  <%= form_with url: playgrounds_path, method: :get, local: true, class: "mb-6 flex justify-center" do %>
    <input type="text" name="q" value="<%= params[:q] %>" placeholder="公園名や場所を検索"
      class="border border-gray-300 rounded-l-lg p-2 w-64 focus:outline-none focus:ring focus:ring-amber-300">
    <button type="submit" class="bg-amber-400 hover:bg-amber-500 text-white px-4 rounded-r-lg">検索</button>
  <% end %>

  <!-- 🗺 Google Map 表示エリア -->
<div id="map" style="height: 400px; width: 100%;" class="rounded-lg shadow-md border border-gray-200 mb-8"></div>
        

  <!-- 🧭 検索結果一覧 -->
  <% if @playgrounds.present? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @playgrounds.each do |pg| %>
        <div class="bg-white shadow-md rounded-xl p-6 text-left border border-gray-100 hover:shadow-lg transition">
          <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= pg.name %></h2>
          <p class="text-gray-600 mb-2"><%= pg.address %></p>
          <p class="text-sm text-gray-500 mb-3"><%= truncate(pg.description, length: 80) %></p>
          <%= link_to "👀 詳細を見る", playground_path(pg), class: "text-blue-500 hover:underline" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-500 mt-10">該当する遊び場はありません。</p>
  <% end %>
</div>

<!-- ✅ Google Mapsを初期化するスクリプト -->
<script>
  function initMap() {
    console.log("✅ initMap loaded!");

    // 🗺️ マップを初期化（東京タワーを中央に仮設定）
    const map = new google.maps.Map(document.getElementById("map"), {
      center: { lat: 35.6586, lng: 139.7454 },
      zoom: 12,
    });

    // ✅ Railsから遊び場データをJSへ渡す
    const playgrounds = <%= @playgrounds.to_json.html_safe %>;

    playgrounds.forEach(pg => {
      if (pg.address) {
        const geocoder = new google.maps.Geocoder();
        geocoder.geocode({ address: pg.address }, (results, status) => {
          if (status === "OK" && results[0]) {
            new google.maps.Marker({
              position: results[0].geometry.location,
              map: map,
              title: pg.name,
            });
          }
        });
      }
    });
  }
</script>
